<% if @current_user %>
  Hi <%= @current_user.name %>
<% else %>
  Sign Up
  <%= form_for :user, url: { controller: "sessions", action: "create" } do |f|  %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.submit %>
  <% end %>

  OR Log In
  <%= form_for :user, url: { controller: "sessions", action: "create" } do |f|  %>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.submit %>
  <% end %>
<% end %>
